<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:layout_margin="@dimen/list_item_margin"
    android:foreground="?selectableItemBackground"
    android:elevation="@dimen/list_item_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?colorPrimary"
        android:orientation="vertical">

        <!--suppress AndroidLintContentDescription -->
        <com.example.xyzreader.ui.DynamicHeightNetworkImageView
            android:id="@+id/thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:background="@drawable/gradient" />

        <TextView
            android:id="@+id/article_title"
            style="@style/TextAppearance.AppCompat.Menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/list_item_main_padding"
            android:paddingTop="@dimen/list_item_main_padding"
            android:paddingRight="@dimen/list_item_main_padding"
            android:paddingBottom="@dimen/list_item_bottom_padding"
            android:textColor="@color/colorWhite"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/list_item_main_padding"
            android:paddingRight="@dimen/list_item_main_padding"
            android:paddingBottom="@dimen/list_item_main_padding"
            android:textColor="@color/colorBlack"
            android:fontFamily="sans-serif-black"
            android:textStyle="normal"
            android:maxLines="2"
            android:ellipsize="end" />
    </LinearLayout>

</android.support.v7.widget.CardView>
